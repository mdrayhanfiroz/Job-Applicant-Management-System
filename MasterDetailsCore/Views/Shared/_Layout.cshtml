<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/font-awesome/css/font-awesome.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>

    <script type="text/javascript">

        function LoadData(skillId = null) {
            var skillContainer = $("#skillContainer");
            $.ajax({
                url: "/Candidates/AddNewSkill/" + skillId ?? "",
                type: "GET",
                success: function (data) {
                    skillContainer.append(data);
                }
            });

        }
        $(document).on("click", "#btnPlus", function (e) {
            e.preventDefault();
            LoadData();


        });

        $(document).on("click", "#deleteSkill", function (e) {
            e.preventDefault();
            $(this).parent().parent().remove();
        });




    </script>



</head>
<body>
    <nav class="navbar navbar-expand-md bg-info text-light">
        <div class="container">
            <a class="navbar-brand">IsDB</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        @Html.ActionLink("Home","Index","Home",new{},new{@class="nav-link"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Candidates","Index","Candidates",new{},new{@class="nav-link"})
                    </li>
                    <li class="nav-item">
                        @Html.ActionLink("Skills","Index","Skills",new{},new{@class="nav-link"})
                    </li>
                </ul>

            </div>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    <footer>
        <p class="text-center">@DateTime.Now.Year www.isdb.org</p>
    </footer>

    <environment>
        <script src="~/lib/bootstrap/js/bootstrap.bundle.js"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    </environment>
    @RenderSection("scripts",false)
    @RenderSection("styles",false)




</body>
</html>
